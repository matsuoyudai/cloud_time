<div class="container my-5">
  <div class="row">
    <div class="col-sm-10 col-sm-offset-1">
      <h2><span class="contents_title">申請一覧</span></h2>
    </div>
  </div>

  <div class="row mt-5">
    <div class="col-sm-10 col-sm-offset-1">
      <table class="table table-hover">
        <thead class="contents_title">
          <tr>
            <th>申請日時</th>
            <th>申請者</th>
            <th>申請ステータス</th>
          </tr>
        </thead>

        <tbody>
          <% @applys.each do |apply| %>
            <tr>
              <td><%= link_to apply.created_at.strftime("%Y-%m-%d %H:%M"), admins_apply_path(apply) %></td>
              <td><%= apply.user.name %></td>
              <td><%= apply.status %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
 </div>

 <!-- ページネーション -->


  <div class="container">
    <div class="row">
     <div class="col-md-4 offset-md-4 py-2  mt-5">
      <%= paginate @applys %>
     </div>
    </div>
  </div>