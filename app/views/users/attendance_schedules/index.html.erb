<div class="container">
	<div class="row">
		<div class="text-center">
			<h2><%= @year_name %>年<%= @month_name %>月の勤務表</h2>
	    <table class="table table-bordered">
	      <thead class="contents_title">
	        <tr>
	          <th>日付</th>
	          <th>勤務区分</th>
	          <th>出勤時刻</th>
	          <th>退勤時刻</th>
	          <th>休憩開始</th>
	          <th>休憩終了</th>
	          <th>労働時間</th>
	          <th></th>
	        </tr>
	      </thead>

	      <tbody>
	      	<%=(Date.parse("#{@start_date}")..Date.parse("#{@end_date}")).each do |date| %>
	      	<% css_class = case %w{日 月 火 水 木 金 土}[date.wday]
					    when '土'
					      'text-primary'
					    when '日'
					      'text-danger'
					    when HolidayJp.holiday?(date)
					  	  'text-danger'
					    end
					%>
	      	<tr>
	      		<td class="<%= css_class %>"><%= date %>（<%= %w[日 月 火 水 木 金 土][date.wday] %>）</td>
	    			<td>
	    				<% if HolidayJp.holiday?(date) %>
								<%= "休日" %>
							<% elsif date.wday == 0 ||date.wday == 6 %>
								<%= "休日" %>
							<% else %>
								<%= "出勤" %>
							<% end %>
						</td>
						<td>
		    			<% @attendance_schedule.each do |schedule|%>
								<% if schedule.day == date.strftime('%Y-%m-%d') %>
							    <%= schedule.arrive_time.try(:strftime, "%H：%M") %>
							  <% end %>
							<% end %>
		    	  </td>
		      	<td>
			  			<% @attendance_schedule.each do |schedule|%>
								<% if schedule.day == date.strftime('%Y-%m-%d') %>
				      		<%= schedule.leave_time.try(:strftime,"%H：%M") %>
							  <% end %>
							<% end %>
		  			</td>
			      <td><% @attendance_schedule.each do |schedule|%>
								<% if schedule.day == date.strftime('%Y-%m-%d') %>
				      		<%= schedule.break_start_time.try(:strftime,"%H：%M") %>
							  <% end %>
							<% end %>
						</td>
			      <td><% @attendance_schedule.each do |schedule|%>
								<% if schedule.day == date.strftime('%Y-%m-%d') %>
				      		<%= schedule.break_end_time.try(:strftime,"%H：%M") %>
							  <% end %>
							<% end %>
						</td>
			      <td>
			  			<% @attendance_schedule.each do |schedule|%>
								<% if schedule.day == date.strftime('%Y-%m-%d') %>
									<%= Time.at((schedule.leave_time - schedule.arrive_time) - (schedule.break_end_time - schedule.break_start_time)).utc.strftime('%H：%M') %>
				      				<%#= schedule.total_hour + ":" + schedule.total_min %>
							  <% end %>
							<% end %>
						</td>
						<td>
				      		<%# if attendance.present? && attendance.attendance_schedule.present? %>
				      				<!-- <td><%#= link_to "勤怠変更", "#{attendance_schedule_path(attendance.attendance_schedule.id)}?date=#{@current_years}", class:"btn btn-info" %></td> -->
				      			<%# elsif admin_signed_in? %>
				      				<!-- <td></td> -->
			      	<% unless admin_signed_in? %>
			      	  <% if @attendance_schedule.blank? %>
			      	    <%= link_to "勤怠登録", new_attendance_schedule_path, class:"btn btn-danger" %>
			      	  <% end %>
	              <% @attendance_schedule.each do |schedule|%>
		        			<% if schedule.day == date.strftime('%Y-%m-%d') %>
			        			<%= link_to "勤怠変更", "#{attendance_schedule_path(schedule.id)}?date=#{@current_years}", class:"btn btn-info" %>
	  		        	<% else %>
	  				    		<%= link_to "勤怠登録", new_attendance_schedule_path, class:"btn btn-danger" %>
	  		        	<% end %>
	              <% end %>
	          	<% end %>
	  				</td>
	      	</tr>
	      	<% end %>
	    	</tbody>
	    </table>
		</div>
	</div>
</div>
