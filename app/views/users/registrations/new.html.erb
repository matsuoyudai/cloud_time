<div class="container">
  <div class="row">
    <div class="col">
      <div class="text-center">
        <h2>アカウント登録</h2><br>
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "layouts/error", resource: resource %>

        <div class="field form-group">
          <div class="row">
            <div class="col-sm-12">
              <%= f.label :お名前 %>
            </div>
          </div>
          <div class="col-sm-12 form">
            <%= f.text_field :name, autofocus: true, autocomplete: "name" %>
          </div>
        </div><br>

        <div class="field form-group">
          <div class="row">
            <div class="col-sm-12">
              <%= f.label :お名前（カナ） %>
            </div>
          </div>
          <div class="col-sm-12 form">
            <%= f.text_field :name_kana, autofocus: true, autocomplete: "name_kana" %>
          </div>
        </div><br>

        <div class="field form-group">
          <div class="row">
            <div class="col-sm-12">
              <%= f.label :メールアドレス %>
            </div>
          </div>
          <div class="col-sm-12 form">
            <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
          </div>
        </div><br>

        <div class="field form-group">
          <div class="row">
            <div class="col-sm-12">
              <%= f.label :パスワード（６文字以上） %>
            </div>
          </div>
          <div class="col-sm-12 form">
            <%= f.password_field :password, autocomplete: "new-password" %>
          </div>
        </div><br>

        <div class="field form-group">
          <div class="row">
            <div class="col-sm-12">
              <%= f.label :パスワード確認用 %>
            </div>
          </div>
          <div class="col-sm-12 form">
            <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
          </div>
        </div><br>

        <div class="actions">
          <div class="text-center"><br>
            <%= f.submit "アカウント登録", class:"btn btn-success" %>
          </div>
        </div>
        <% end %>

        <div class="actions">
          <div class="col-sm-4 col-sm-offset-4 action"><br>
            <h4><span class="login_title">既に登録済みの方は<br>
              <%= link_to "こちら", new_user_session_path  %>からログインしてください</span></h4>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>