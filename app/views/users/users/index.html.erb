<div class="container">
  <div class="row">
    <div class="col">
      <div class="text-center">
        <h2>アカウント設定</h2><br>
        <%= form_for(@user, url: user_path(@user.id)) do |f| %>
        <% if @user.errors.any? %>
        <ul>
          <% @user.errors.full_messages.uniq.each do |message| %>
          <li><%= message %></li>
          <% end %>
        </ul>
        <% end %>

        <div class="field form-group">
          <div class="row">
            <div class="col-sm-12">
              <%= f.label :メールアドレス %>
            </div>
          </div>
          <div class="col-sm-12 form">
            <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
          </div>
        </div><br>

        <div class="field form-group">
          <div class="row">
            <div class="col-sm-12">
              <%= f.label :新しいパスワード（６文字以上） %>
            </div>
          </div>
          <div class="col-sm-12 form">
            <%= f.password_field :password, autocomplete: "new-password" %>
          </div>
        </div><br>

        <div class="field form-group">
          <div class="row">
            <div class="col-sm-12">
              <%= f.label :新しいパスワード（確認用） %>
            </div>
          </div>
          <div class="col-sm-12 form">
            <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
          </div>
        </div><br>

        <div class="actions">
          <div class="text-center"><br>
            <%= f.submit "登録情報変更", class:"btn btn-success" %>
          </div>
        </div>
        <%= f.hidden_field :name, value: @user.name %>
        <%= f.hidden_field :name_kana, value: @user.name_kana %>
        <% end %>
      </div>
    </div>
  </div>
</div>